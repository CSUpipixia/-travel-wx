.container {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  padding: 20rpx 40rpx 20rpx 20rpx;
}

.userinfo-nickname {
  position:relative;
  font-size: 20px;
  bottom: 80rpx;
}

.my-item{
    width: 100%;
    background: url(../../image/arrow-right.png) no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    border-bottom: 1px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 100rpx;
    font-size:14px;
}