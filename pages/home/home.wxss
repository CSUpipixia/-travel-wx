.container {
  background-color: #fff;
  min-height: 100%;
  display: block;
}

/* 申请表 */

.application-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 24rpx;
  background-color: #f2f2f2;
}

.application-box {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius: 5px;
}

.application-box .status-box {
  float: left;
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  background-color: gray;
}

.application-box .application-title {
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 40rpx;
  padding: 20rpx 0 0rpx 0;
  color: #000;
  margin-left: 24rpx;
}

.application-box .application-detail {
  width: 280rpx;
  overflow: hidden;
  font-size: 30rpx;
  padding: 24rpx 0;
  color: #e64340;
  margin-left: 24rpx;
}

.no-more-applications {
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 48rpx;
  color: #999;
}
